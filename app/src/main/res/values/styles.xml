<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="playerBackBut">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="settingsActivityButtonsStyle">
        <!--        layout-->
        <item name="android:theme">@style/Theme.SettingsActivity</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="backgroundTint">@color/transparent</item>
        <!--        text-->
        <item name="android:textColor">@color/black_White</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">400</item>
        <!--        icon-->
        <item name="iconGravity">end</item>
        <item name="iconSize">18dp</item>
        <item name="iconTint">@color/YP_gray_White</item>
    </style>

    <style name="Search">
        <item name="android:background">@drawable/search_rounded_ui</item>
        <item name="backgroundTintMode">screen</item>
    </style>

    <style name="albumCoverStyle">
        <item name="background">@drawable/album_cover_rounded_ui</item>
        <item name="backgroundTintMode">screen</item>
    </style>

    <style name="cardTextViewBlackWhite">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@color/transparent</item>
        <item name="android:textColor">@color/YP_black_White</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="cardTextViewGrayWhite">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@color/transparent</item>
        <item name="android:textColor">@color/YP_gray_White</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="playerTrackInformationTitle" parent="cardTextViewBlackWhite">
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/YP_AAL_gray</item>
    </style>

    <style name="playerTrackData" parent="playerTrackInformationTitle">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">5sp</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_White</item>
    </style>

    <style name="TabLayout" >
        <item name="tabTextColor">@color/black_White</item>
        <item name="tabIndicatorColor">@color/black_White</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="titleActivityButtonStyle">
        <!--        layout-->
        <item name="android:theme">@style/Theme.SettingsActivity</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="backgroundTint">@color/transparent</item>
        <!--        text-->
        <item name="android:textColor">@color/YP_black_White</item>
        <item name="textEndPadding">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="roundedBlackWhiteBut">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center|center_horizontal</item>
        <item name="backgroundTint">@color/YP_black_White</item>
        <item name="backgroundTintMode">add</item>
        <item name="android:textColor">@color/white_YP_Black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="fragmentText">
        <item name="android:gravity">center|center_horizontal</item>
        <item name="android:textColor">@color/YP_black_White</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.BottomNavigator" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/YP_light_background</item>
        <item name="colorOnSurface">@color/YP_black_White</item>
        <item name="backgroundTint">@color/YP_white_black</item>
        <item name="iconSize">24dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>