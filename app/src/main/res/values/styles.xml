<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainActivityButtonsStyle" parent = "Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:theme">@style/Base.Theme.PlaylistMaker</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTintMode">src_in</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>


    </style>

    <style name="settingsActivityButtonsStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:theme">@style/Theme.SettingsActivity</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:foregroundGravity">left|center</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="iconGravity">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ThemeOverlay.AppCompat.DayNight.SearchContainer.Search">
        <item name="theme">@style/ThemeOverlay.AppCompat.DayNight.SearchContainer</item>
        <item name="android:background">@drawable/search_rounded_ui</item>
        <item name="backgroundTintMode">screen</item>

    </style>

</resources>