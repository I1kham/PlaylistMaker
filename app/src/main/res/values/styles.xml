<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainActivityButtonsStyle">
        <!--        layout-->
        <item name="android:theme">@style/Base.Theme.PlaylistMaker</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">@color/allWhite</item>
        <item name="cornerRadius">16dp</item>
        <!--        text-->
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/all_YP_Black</item>
        <!--        icon-->
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/all_YP_Black</item>
        <item name="iconTintMode">src_in</item>
        <item name="iconSize">19dp</item>
    </style>

    <style name="settingsActivityButtonsStyle">
        <!--        layout-->
        <item name="android:theme">@style/Theme.SettingsActivity</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <!--        text-->
        <item name="android:textColor">@color/black_White</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight">400</item>
        <!--        icon-->
        <item name="iconGravity">end</item>
        <item name="iconSize">18dp</item>
        <item name="iconTint">@color/YP_gray_White</item>
    </style>

    <style name="Search">
        <item name="android:background">@drawable/search_rounded_ui</item>
        <item name="backgroundTintMode">screen</item>
    </style>

    <style name="albumCoverStyle">
        <item name="android:background">@drawable/album_cover_rounded_ui</item>
        <item name="backgroundTintMode">screen</item>
    </style>

    <style name="cardTextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/YP_black_White</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="playerTrackInformationTitle" parent="cardTextView">
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/YP_AAL_gray</item>
    </style>

    <style name="playerTrackData" parent="playerTrackInformationTitle">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">5sp</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_White</item>
    </style>

<!--//todo make length correct-->
    <style name="TabLayout">
        <item name="tabTextColor">@color/black_White</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="android:indicatorLeft">16dp</item>
        <item name="android:indicatorRight">16dp</item>
        <item name="tabIndicatorColor">@color/YP_black_White</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>